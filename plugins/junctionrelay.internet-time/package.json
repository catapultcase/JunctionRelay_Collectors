{
  "name": "@junctionrelay/plugin-internet-time",
  "version": "1.0.0",
  "description": "Internet time collector plugin for JunctionRelay",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "junctionrelay": {
    "type": "collector",
    "collectorName": "junctionrelay.internet-time",
    "entry": "dist/index.js",
    "displayName": "Internet Time",
    "description": "Accurate time from internet sources",
    "category": "System & Testing",
    "emoji": "\ud83c\udf10",
    "fields": {
      "requiresUrl": false,
      "requiresAccessToken": false
    },
    "defaults": {
      "name": "Internet Time",
      "pollRate": 5000,
      "sendRate": 5000
    },
    "setupInstructions": [
      {
        "title": "No configuration needed",
        "body": "Automatically fetches accurate UTC time from multiple internet sources with smart caching and failover. Requires network connectivity."
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "pack": "node ../../scripts/pack.mjs",
    "clean": "node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true});fs.rmSync('out',{recursive:true,force:true})\""
  },
  "dependencies": {
    "@junctionrelay/collector-sdk": "1.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/catapultcase/JunctionRelay_Collectors.git",
    "directory": "plugins/junctionrelay.internet-time"
  }
}
